{
  "name": "autopromote-server",
  "version": "1.0.0",
  "description": "Back-end for AutoPromote platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-firebase-integration.js",
    "deploy": "npm install && npm run build",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf dist",
    "compile": "mkdir dist && xcopy /E /I /Y *.js dist\\ && xcopy /E /I /Y *.json dist\\ && xcopy /E /I /Y .env dist\\"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.1",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nanoid": "^5.0.7",
    "node-fetch": "^2.7.0",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "firebase-tools": "^14.15.1",
    "nodemon": "^2.0.16",
    "rimraf": "^6.0.1"
  }
}
